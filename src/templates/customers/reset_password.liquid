<div class="container account-page">
    <div class="page__header ">
        {% include 'breadcrumbs' %}
    </div>
    <div class="page__title animated-block">
        <h1>{{ 'customer.reset_password.title' | t }}</h1>
    </div>
    <div class="row  account-page__row">
        <div class="col col-12 col-md-6 offset-md-3  account-page__col animated-block">
            {% form 'reset_customer_password' , class:'form' %}
                <div class="form__text">
                    <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>
                </div>
                {%- if form.errors -%}
                    <div class="form__message form__message--error form__text ">
                        {{ form.errors | default_errors }}
                    </div>
                {%- endif -%}
                <div class="form__row form__row--md">
                    <label class="form__label form__label--md"
                           for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
                    <input type="password" value="" name="customer[password]" id="ResetPassword"
                           class="form__field form__field--md {% if form.errors contains 'password' %} input--error{% endif %}">
                </div>
                <div class="form__row form__row--md">
                    <label class="form__label form__label--md"
                           for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
                    <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation"
                           class="form__field form__field--md {% if form.errors contains 'password_confirmation' %} input--error{% endif %}">
                </div>
                <div class="form__row form__row--md form__row--btn">
                    <button type="submit" class="btn btn--default">
                        <span>{{ 'customer.reset_password.submit' | t }}</span>

                    </button>
                </div>
            {% endform %}
        </div>
    </div>
</div>

