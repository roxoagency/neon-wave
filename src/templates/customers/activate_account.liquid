<div class="bg  bg--white-texture o-account">
    <div class="o-account__holder">
        <div class="form__title animated-block">
            <h1 class="t-heading--big">
                <span class="t-heading--large-text">{{ 'customer.activate_account.title' | t }}</span>
            </h1>
            <div class="seperator  seperator--float  seperator--secondary">
                {% include  "black_brush_stroke" %}
            </div>
        </div>
        <div class="form__text animated-block">
            <p>{{ 'customer.activate_account.subtext' | t }}</p>
        </div>
        {% form 'activate_customer_password', class:'c-form animated-block' %}
            {%- if form.errors -%}
                <div class="form__message c_form__message--error form__text">
                    {{ form.errors | default_errors }}
                </div>
            {%- endif -%}
            <div class="form__row form__row--md">
                <label for="CustomerPassword"
                       class="form__label form__label--md">{{ 'customer.activate_account.password' | t }}</label>
                <input class="form__field form__field--md" type="password" value="" name="customer[password]"
                       id="CustomerPassword"
                       placeholder="{{ 'customer.activate_account.password' | t }}">
            </div>
            <div class="form__row form__row--md">
                <label for="CustomerPasswordConfirmation"
                       class="form__label form__label--md">{{ 'customer.activate_account.password_confirm' | t }}</label>
                <input class="form__field form__field--md" type="password" value="" name="customer[password_confirmation]"
                       id="CustomerPasswordConfirmation"
                       placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
            </div>
            <div class="form__row form__row--md">
                <button type="submit" class="  c-cta    c-cta--aligned-left">
                    <span>{{ 'customer.activate_account.submit' | t }}</span>

                </button>
            </div>
            <div class="form__field ">
                <input class="form__text" type="submit" name="decline"
                       value="{{ 'customer.activate_account.cancel' | t }}">
            </div>
        {% endform %}
    </div>
</div>
