<div class="table__wrappper">
    <table class="table table--responsive">
        <tbody>
        <tr>
            <th class="table__th">{{ 'customer.address.name' | t }}</th>
            <td class="table__td">
                {{ customer_address.first_name }} {{ customer_address.last_name }}
            </td>
        </tr>
        {% if  customer_address.company != "" %}
            <tr>
                <th class="table__th">{{ 'customer.address.company' | t }}</th>
                <td class="table__td">
                    {{ customer_address.company }}
                </td>
            </tr>
        {% endif %}
        <tr>
            <th class="table__th">{{ 'customer.address.email' | t }}</th>
            <td class="table__td">
                {{ customer.email }}
            </td>
        </tr>

        {% if  customer_address.address != "" %}
            <tr>
                <th class="table__th">{{ 'customer.address.address' | t }}</th>
                <td class="table__td">
                    {{ customer_address.address1 }}
                </td>
            </tr>

        {% endif %}
        {% if  customer_address.address2 != "" %}
            <tr>
                <th class="table__th">{{ 'customer.address.address2' | t }}</th>
                <td class="table__td">
                    {{ customer_address.address2 }}
                </td>
            </tr>

        {% endif %}
        <tr>
            <th class="table__th">{{ 'customer.address.country' | t }}</th>
            <td class="table__td">
                {% if  customer_address.city != "" or customer_address.province_code != "" %}{{ customer_address.city }} {{ customer_address.province_code }},{% endif %} {{ customer_address.country }}
            </td>
        </tr>

        {% if  customer_address.zip != "" %}
            <tr>
                <th class="table__th">{{ 'customer.address.zip' | t }}</th>
                <td class="table__td">
                    {{ customer_address.zip }}
                </td>
            </tr>

        {% endif %}
        {% if  customer_address.phone != "" %}
            <tr>
                <th class="table__th">{{ 'customer.address.phone' | t }}</th>
                <td class="table__td">
                    {{ customer_address.phone }}
                </td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>